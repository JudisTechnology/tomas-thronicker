@model DemoEPS.Models.CouponModel
@{
    ViewBag.Title = "Create Coupon";
}
<h2>Create Coupon</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            Number Of Discount Coupon
            @Html.EditorFor(m => m.NumberOfDiscountCoupon)
            <br />
            <br />
            Discount Percentage
            @Html.EditorFor(m => m.DiscountPercentage)
            @Html.ValidationMessageFor(m => m.DiscountPercentage)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ExpiryDate)
            @Html.TextBoxFor(m => m.ExpiryDate, "{0:yyyy-MM-dd}", new { type = "date" })
        </div>
        <button type="submit" class="btn btn-primary">Generate</button>
    </div>
}